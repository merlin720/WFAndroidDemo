<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="60dp"
    android:padding="5dp"
    android:background="@drawable/listview_item_selector">

    <ImageView
        android:id="@+id/listview_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:layout_marginRight="5dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/listview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listview_imageView"
        android:text="title"/>

    <TextView
        android:id="@+id/listview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listview_imageView"
        android:layout_alignParentBottom="true"
        android:text="content"/>

      <TextView
        android:id="@+id/listview_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:text="删除"
        android:textSize="18sp" />

</RelativeLayout>
